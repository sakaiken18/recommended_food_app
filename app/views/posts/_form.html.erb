<%= form_with model: @post, local: true do |form| %>
  <div>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %>
  </div>

  <br>

  <div>
  <%= form.label :content %>
  <%= form.text_area :content, required: true %>
  </div>

  <br>

  <div>
  <%= form.submit "送信" %>
  </div>
<% end %>